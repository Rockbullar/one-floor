<a href="<%= article[:link] %>" target="_blank">
  <div class="news-card mx-3 mt-3 <%= @articles.last == article && "mb-3" %>">
    <div class="d-flex flex-grow-1 my-1 news-box">
        <div class="card-body d-flex justify-content-flex-start mx-0 py-2" style="gap: 8px;">
          <img src= <%= article[:image_url] %> class="news-image" alt="news-image">
          <div class="news-title">
            <div>
              <% if /.+twitter.+/.match?(article[:link]) %>
                <i class="fab fa-twitter" style="color: dodgerblue;"></i> @<%= article[:source] %>
              <% else %>
                <%= article[:source] %>
              <% end %>
            </div>
            <div class="mb-0 news-content"> <%= article[:text] %> </div>
            <div style="font-size: smaller;"> <%= article[:timestamp] > 1 ? " #{article[:timestamp]} minutes ago" : "just now" %></div>
          </div>
        </div>
    </div>
  </div>
</a>
