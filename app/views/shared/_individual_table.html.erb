<tr>
  <th scope="row">
    <div class="avatar">
      <% unless nft.image_url.nil? %>
        <%= image_tag nft.image_url, class: "avatar", alt: "avatar"%>
      <% end %>
    </div>
  </th>
  <div class="d-flex align-items-center justify-content-around" style="background-color: transparent;">
  <td>
    <div class="text-left">
      <p class="nft-name pt-3" style="font-size: 15px; font-weight: bold;"><%=nft.name ? nft.name : "UNKNOWN"%></p>
    </div>
  </td>
  <td>
    <div class="text-center pt-3 align-items-center">
      <p><%= nft.collection.floor_price %></p>
    </div>
  </td>
  <td>
    <div class="text-center pt-3 align-items-center">
    <% unless nft.last_sale_eth_price.nil? %>
      <p><%= '%.2f' % (nft.last_sale_eth_price/10**18) %></p>
    <% end %>
    </div>
  </td>
  <td>
    <div class="text-center pt-3 align-items-center">
    <% unless nft.highest_bid_eth_price.nil? %>
      <p><%= '%.2f' % (nft.highest_bid_eth_price/10**18) %></p>
    <% end %>
    </div>
  </td>
  </div>
</tr>
