<div class="nft-card bg-light mb-3 w-75 mx-auto">
  <div class="d-flex justify-content-between">
    <div class="left-side flex-grow-1 my-1">
      <div class="nft-name w-80 ml-3">
          <p class="mb-0 text-dark collection-name"><%= nft_collection.name %></p>
      </div>
      <div class="card-body d-flex justify-content-space-around align-items-center flex-grow-1 pl-3 pt-0 pr-0">
        <div class="avatar float-left">
          <% unless nft_collection.image_url.nil? %>
            <%= image_tag nft_collection.image_url, class: "avatar", alt: "avatar"%>
          <% end %>
        </div>
        <div class="d-flex floor-price-text px-2 pt-2 mx-auto">
          <div class="floor-price text-center mx-2">
            <p>Floor</p>
            <p><%= nft_collection.floor_price %></p>
          </div>
          <div class="supply text-center mx-2">
            <p>Supply</p>
            <p><%= nft_collection.total_supply ? nft_collection.total_supply : "N/A"  %></p>
          </div>
          <div class="num-owners text-center mx-2">
            <p>Owners</p>
            <p><%= nft_collection.num_owners ? nft_collection.num_owners : "N/A"  %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="right-side socials mr-2 pt-1 mg-0">
        <a href="<%=nft_collection.twitter_url%>"><i class="fab fa-twitter"></i></a>
        <a href="<%=nft_collection.slug%>"><i class="fas fa-globe-americas"></i></a>
        <a href="<%=nft_collection.discord_url%>"><i class="fab fa-discord"></i></a>
    </div>
  </div>
</div>
