<a href=<%= nft.permalink %> target="_blank">
  <div class="nft-card bg-light mb-3 mx-auto w-75" style="border-radius:25px;">
    <div class="d-flex justify-content-between">
      <div class="flex-grow-1 my-1 d-flex flex-column justify-content-center" style="width:110%;">
        <div class="w-80 ml-3">
          <p class="mb-0 pb-0 text-dark"><%=nft.name ? nft.name : "UNKNOWN"%></p>
        </div>
        <div class="card-body d-flex justify-content-around w-100 my-auto">
          <div class="avatar float-left">
            <% unless nft.image_url.nil? %>
              <%= image_tag nft.image_url, class: "avatar", alt: "avatar" %>
            <% end %>
          </div>
          <div class="last-sale-text text-left">
              <p class="my-2">last sale</p>
              <p class="mb-0"><%= '%.2f' % (nft.last_sale_eth_price/10**18) %><i class="fab fa-ethereum"></i></p>
          </div>
          <div class="highest-bid-text">
              <p class="my-2">highest bid</p>
              <p class="mb-0"><%= nft.highest_bid_eth_price.nil? ? 'n/a' : '%.2f' % (nft.highest_bid_eth_price/10**18) %><i class="fab fa-ethereum"></i></p>
          </div>
        </div>
      </div>
      <div class="right-side socials mr-2 pt-1 d-flex">
        <a href=<%=nft.collection.twitter_url%> target="_blank"><i class="fab fa-twitter"></i></a>
        <a href="https://etherscan.io/address/<%=nft.contract_id%>" target="_blank"><i class="fas fa-globe-americas"></i></a>
        <a href=<%=nft.collection.discord_url%> target="_blank"><i class="fab fa-discord"></i></a>
      </div>
    </div>
  </div>
</a>
