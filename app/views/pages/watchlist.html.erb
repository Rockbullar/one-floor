    <div class="tab-container mx-1 px-2 pb-2" >
      <ul class="nav nav-pills mb-0 justify-content-center" id="pills-tab" role="tablist">
        <li class="nav-item" data-action="click->watchlist-pill#buttoncollection" style="border-radius: 10px;">
          <a data-action="click->watchlist-pill#buttoncollection" class="nav-link text-white px-2 active" style="border-radius: 10px;" id="pills-24Hr-tab" href="#pills-24Hr"  data-toggle="pill" role="tab" aria-selected="true">24Hr Watchlist</a>
        </li>
        <li class="nav-item" style="border-radius: 10px;">
          <a data-action="click->watchlist-pill#buttoncollection" class="nav-link text-white px-2" id="pills-7D-tab" href="#pills-7D"  data-toggle="pill" role="tab" aria-selected="false">7D Watchlist</a>
        </li>
        <li class="nav-item" style="border-radius: 10px;">
          <a data-action="click->watchlist-pill#buttoncollection" class="nav-link text-white px-2" id="pills-30D-tab" href="#pills-30D"  data-toggle="pill" role="tab" aria-selected="false">30D Watchlist</a>
        </li>
        <li class="nav-item" style="border-radius: 10px;">
          <a data-action="click->watchlist-pill#buttonnft" class="nft-watchlist-pill nav-link text-white px-2" id="pills-individual-tab" data-toggle="pill" href="#pills-individual" role="tab" aria-selected="false">Individual Watchlist</a>
        </li>
      </ul>
    </div>
    <button type="button" class="d-flex align-items-center justify-content-center btn glass text-white" data-toggle="modal" data-target="#collectionModal">
      <i class="far fa-plus-square d-block align-middle text-center text-white mr-2" style="font-size:1.5rem;"></i>
      <p data-watchlist-pill-target='addbutton' class="mb-0">Add collection</p>
    </button>
  </div>
  <div class="tab-content" id="pills-tabContent">
    <div class="mx-auto pt-6 tab-pane fade show active" id="pills-24Hr" style="overflow-y: scroll; height:75vh;">
      <table class="table table-striped table-dark glasstable">
        <thead>
          <tr>
            <th scope="col" style="background-color: rgba(0, 0, 0, 0.4);"></th>
            <th scope="col" class="text-left" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;">Collection</th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;"><b>!FLOOR</b></th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;">Sales Volume (24Hr)</th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;">Floor Change (24Hr)</th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;">Sales # (24Hr)</th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;" data-toggle="tooltip" data-placement="top" title="Premium of average sales price over floor price">Average Floor Premium</th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;" data-toggle="tooltip" data-placement="top" title="Average asset owned per holder">Total Supply / Unique Owners</th>
          </tr>
        </thead>
        <tbody>
          <div class="nft-cards pt-3">
            <% @collections.each do |nft_collection| %>
              <%= render "shared/collection_one_table", nft_collection: nft_collection %>
            <% end %>
          </div>
        </tbody>
      </table>
    </div>
    <div class="mx-auto pt-6 tab-pane fade" id="pills-7D" style="overflow-y: scroll; height:75vh;">
