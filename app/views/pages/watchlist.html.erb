    <div class="mx-auto pt-6 tab-pane fade" id="pills-individual" style="overflow-y: scroll; height:75vh;">
      <table class="table table-striped table-dark glasstable" style="overflow: auto; white-space: nowrap;">
        <thead>
          <tr>
            <th scope="col" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;"></th>
            <th scope="col" class="text-left" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;">Name</th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;"><b>!FLOOR</b></th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;">Last Sale</th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;">Highest Bid</th>
            <th scope="col" class="text-center" style="background-color: rgba(0, 0, 0, 0.4); vertical-align: middle;">Collection Sales Volume (24Hr)</th>
