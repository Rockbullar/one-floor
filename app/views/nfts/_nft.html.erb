<a class="flex-grow-1" href="#">
  <div class="nft-card bg-light mb-3" style="width: 18rem;">
    <div class="d-flex justify-content-between">
      <div class="left-side flex-grow-1 my-1">
        <div class="nft-collection-number bg-light w-80 ml-3">
            <p class="mb-0 text-dark"><%= nft.name %></p>
        </div>
        <div class="card-body d-flex justify-content-between mx-1 pt-0 pb-2">
          <%= image_tag nft.image_url, class: "avatar", alt: "avatar" %>
          </div>
          <div class="last-sale-text">
              <p class="mb-1"><%= nft.last_sale_eth_price %></p>
              <p>ETH</p>
          </div>
          <div class="highest-bid-text">
              <p class="mb-1"><%= nft.highest_bid_eth_price %></p>
              <p>ETH</p>
          </div>
        </div>
      </div>
      <div class="right-side socials mr-2 pt-1 mg-0">
          <a href="#"><i class="fab fa-twitter"></i></a>
          <a href="#"><i class="fas fa-globe-americas"></i></a>
          <a href="#"><i class="fab fa-discord"></i></a>
      </div>
    </div>
  </div>
</a>
