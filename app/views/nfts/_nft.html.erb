<a class="flex-grow-1" href=<%= nft.permalink %>>
<div class="nft-card bg-light mb-3" style="width: 18rem;">
  <div class="d-flex justify-content-between">
    <div class="left-side flex-grow-1 my-1">
      <div class="nft-collection-number bg-light w-80 ml-3">
          <p class="mb-0 text-dark"><%=nft.name%></p>
      </div>
      <div class="card-body d-flex justify-content-between mx-1 pt-0 pb-2">
        <div class="avatar float-left">
          <%= image_tag nft.image_url, class: "avatar", alt: "avatar" %>
        </div>
        <div class="last-sale-text">
            <p class="mb-1">last price</p>
            <p><%= '%.3f' % (nft.last_sale_eth_price/10**18) %><i class="fab fa-ethereum"></i></p>
        </div>
        <div class="highest-bid-text">
            <p class="mb-1">highest price</p>
            <p><%= '%.3f' % (nft.highest_bid_eth_price/10**18) %><i class="fab fa-ethereum"></i></p>
        </div>
      </div>
    </div>
    <div class="right-side socialgaas mr-2 pt-1 mg-0">
      <ul>
        <li><a href=<%=nft.collection.twitter_url%> target="_blank"><i class="fab fa-twitter"></i></a></li>
        <li><a href="https://etherscan.io/address/<%=nft.contract_id%>" target="_blank"><i class="fas fa-globe-americas"></i></a></li>
        <li><a href=<%=nft.collection.discord_url%> target="_blank"><i class="fab fa-discord"></i></a></li>
      </ul>
    </div>
  </div>
</div>
</a>
